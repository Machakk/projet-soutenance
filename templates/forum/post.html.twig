{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
    <div class="content-post my-4">
        <div class="row">
            <div class="col-9">
                <h2 class="text-center"> {{posts.title}}</h2>
            </div>
            
            <div class="col-3 user ">
                <a href=""> écrit par <img src="{{ asset('img/metier/design.png') }}" alt=""></a>
            </div>
            <div class="text-right p-2 m-2 mb-3">
                <a href="{{ path('forum') }}" <i class="fas fa-arrow-circle-left"></i></a>
            </div>
        </div>
        <div class="content text-center p-4">
            <p>{{posts.content}}</p>
        </div>
        <div>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <h1>bouton et text area pour créer/commenter un post</h1>            
            {% else %}
                <a class="link" href="{{ path('app_login') }}">Se connecter</a>
                
            {% endif %}
        </div>
    </div>
{% endblock %}


