{% extends 'base.html.twig' %}

{% block body %}

    <div class="content-create-post ">
        <a href="{{path('forum')}}" class="align-items-start"> <b><</b>  Retour au forum </a>
        
        <div class="create-post">
            <h2 class="text-center ">Ajouter  un post</h2>

                {{ form_start(postForm) }}
                    <div class="contain-input text-center mb-4">
                        {{ form_row(postForm.title) }}
                    </div>
                    <div class="contain-input text-center  mb-4">
                        {{ form_row(postForm.metier) }}
                    </div>
                    <div class="contain-input text-center  my-4">
                        {{ form_row(postForm.img) }}
                    </div>
                    <div class="contain-input text-center ">
                        {{ form_row(postForm.content) }}
                    </div>
                    <div class=" text-center ">
                       
                        {{ form_widget(postForm.valider) }}
                    </div>
                    
                {{ form_end(postForm) }}
    
           

        </div>

    </div>

{% endblock %}
