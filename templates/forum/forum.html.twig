{% extends 'base.html.twig' %}

{% block title %}Hello ForumController!{% endblock %}

{% block body %}
<main class="container-forum">
    <nav class="navbar navbar-expand-lg">
        <div class="">
            <ul class="navbar-nav ">
                <li class="nav-item test active">
                    <a class=" btn-nav " href="{{path('forum')}}">TOUS </a>
                </li>
                <li class="nav-item">
                    <a class=" btn-nav" href="{{path('forumFront')}}">FRONTEND </a>
                </li>
                <li class="nav-item ">
                    <a class=" btn-nav" href="{{path('forumBack')}}">BACKEND </a>
                </li>
                <li class="nav-item">
                    <a class=" btn-nav" href="{{path('forumDesign')}}">DESIGN </a>
                </li>
            </ul>
        </div>

    </nav>
    <hr>
    <div class="row text-center">
        <a href="{{path('post_createu')}}" class="">Créer un post</a>
    </div>
    {% for post in posts %}

        <div class="content-post my-4">
            <div class="row">
                <div class="col-9">
                    <h3 class="text-center"> {{post.title}}</h3>

                </div>
                <div class="col-3 user ">
                    <a href="{{path('user_profil', {'id': post.user.id })}}"> écrit par <img src="{{ asset('img/users/') ~ post.user.imgprofil }}" alt=""></a>
                </div>
            </div>

            <div class="content">
                <p>{{post.content}}</p>
            </div>
            <div class="text-right p-2 m-2 mb-3">
                <a href=""><i class="fas fa-comment-alt"></i></a>
                <a class="suite text-center" href="{{ path('forum_post', {'id': post.id}) }}"> Lire la Suite</a>
            </div>
        </div>
    {% endfor %}
</main>

{% endblock %}
