                            <img src="{{ asset('img/users/') ~ post.user.imgprofil }}" alt="">
                        </a>
                    </div>
                </div>

                <div class="content">
                    <p>{{post.content}}</p>
                </div>
                <div class="text-right p-2 m-2 mb-3">
                    <a href=""><i class="fas fa-comment-alt"></i></a>
                    <a class="suite text-center" href="{{ path('forum_post', {'id': post.id}) }}"> Lire la suite</a>
