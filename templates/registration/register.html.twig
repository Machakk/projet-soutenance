{% extends 'base.html.twig' %}



{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    
    {{ form_start(registrationForm) }}
    <div class="container-fluid offset-4 p-4">
        
        <h2 class="p-3">Inscription</h2>
        <div class="dropdown-divider col-2"></div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 p-2">
            <form>
                
                <div class="row form-group">
                    {{ form_row(registrationForm.pseudo) }}
                </div>

                <div class="row form-group">
                    {{ form_row(registrationForm.email) }}
                </div>
                <div class="row form-group">
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Mot de passe'
                    }) }}
                </div>
                <div class="row form-group">
                    {{ form_row(registrationForm.metier) }}
                </div>
                <div class="row form-group">
                    {{ form_row(registrationForm.niveau) }}
                </div>
                <div class="row form-group">
                    {{ form_row(registrationForm.imgProfil)}}
                </div>
                <div class="row form-group">
                    {{ form_row(registrationForm.agreeTerms) }}
                </div>
                {{ form_row(registrationForm._token) }}
                <div class="row form-group">
                    {{ form_widget(registrationForm.valider) }}
                </div>
                <div>
                    <p class="">Vous avez déjà un compte ? <a href="{{ path('app_login') }}" class="badge badge-success">Se connecter</a></p>
                </div>

            </form>
        </div>

    </div>
        
    {{ form_end(registrationForm) }}
    
    
{% endblock %}