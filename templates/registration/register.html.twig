{% extends 'base.html.twig' %}



{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    
    {{ form_start(registrationForm) }}
    <div class="container offset-5">
        <h2>Inscription</h2>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <form>
                
                <div class="row form-group">
                    {{ form_row(registrationForm.pseudo) }}
                </div>

                <div class="row form-group">
                    {{ form_row(registrationForm.email) }}
                </div>
                <div class="row form-group">
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password'
                    }) }}
                </div>
                <div class="row form-group">
                    {{ form_row(registrationForm.metier) }}
                </div>
                <div class="row form-group">
                    {{ form_row(registrationForm.niveau) }}
                </div>
                <div class="row form-group">
                    {{ form_label(registrationForm.agreeTerms) }}
                    {{ form_widget(registrationForm.agreeTerms) }}
                </div>
                <div class="row form-group">
                    {{ form_widget(registrationForm.valider) }}
                </div>
            </form>
            <p class="text-center">Vous avez déjà un compte ? <a href="{{ path('app_login') }}" class="badge badge-success">Se connecter</a></p>
        </div>

    </div>
        
        {{ form_end(registrationForm) }}
    
    
{% endblock %}